  "files": {
    "html": {
      "filename": "index.html",
      "template": "<!DOCTYPE html>\n<html>\n<head>\n    <title>画像のページ</title>\n</head>\n<body>\n    <h1>画像表示</h1>\n    <!-- 画像（img）を追加してください -->\n    <!-- src=\"../shared/images/simple-product.svg\" を使用 -->\n    <p>商品の説明テキスト</p>\n</body>\n</html>",
      "expected": "<!DOCTYPE html>\n<html>\n<head>\n    <title>画像のページ</title>\n</head>\n<body>\n    <h1>画像表示</h1>\n    <img src=\"../shared/images/simple-product.svg\" alt=\"商品画像\">\n    <p>商品の説明テキスト</p>\n</body>\n</html>"
    }
  },
