body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:900px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.footer{background:#111;color:#ccc;margin-top:24px;padding:20px;border-radius:12px}
.footer ul{list-style:none;margin:0;display:flex;gap:18px;justify-content:center;padding:0}
.footer a{color:#ccc;text-decoration:none;opacity:.85;transition:.2s}
.footer a:hover{color:#fff;opacity:1}