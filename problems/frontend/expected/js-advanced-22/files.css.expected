body{font-family:system-ui,-apple-system,"Segoe UI",sans-serif;margin:16px}
.container{max-width:800px;margin:auto}
.cart{border:1px solid #e5e7eb;border-radius:8px}
.cart-row{display:grid;grid-template-columns:2fr 1fr 1.5fr 1fr;gap:8px;padding:8px 12px;align-items:center}
.cart-row.header{background:#f8f8f8;font-weight:600}
.qty{display:flex;gap:6px;align-items:center}
.qty-input{width:64px;padding:6px;border:1px solid #ccc;border-radius:6px}
button{padding:6px 10px;border:1px solid #ccc;border-radius:6px;background:#fff}
.controls{display:flex;gap:12px;align-items:center;flex-wrap:wrap;margin:16px 0}
.summary{border-top:1px solid #e5e7eb;padding-top:12px}
.total{font-size:18px;font-weight:700}
.meta{color:#666}
