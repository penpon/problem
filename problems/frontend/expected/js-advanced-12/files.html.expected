<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>filter で在庫のみ</title>
  <style>#list{display:grid;gap:6px}.item{padding:6px;border:1px solid #ddd;border-radius:6px}</style>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <main style="padding:16px">
    <label><input id="inStock" type="checkbox"> 在庫のみ</label>
    <div id="list" style="margin-top:8px"></div>
  </main>
  <script>
    const items = [
      { id: 1, name: 'Apple', price: 120, inStock: true },
      { id: 2, name: 'Banana', price: 80, inStock: false },
      { id: 3, name: 'Cherry', price: 200, inStock: true }
    ];
    const inStockCheckbox = document.getElementById('inStock');
    function render(){
      const showOnly = inStockCheckbox.checked;
      const filtered = showOnly ? items.filter(it => it.inStock) : items;
      const html = filtered.map(it => `<div class=\"item\">${it.name}</div>`).join('');
      document.getElementById('list').innerHTML = html;
    }
    inStockCheckbox.addEventListener('change', render);
    render();
  </script>
</body>
</html>
