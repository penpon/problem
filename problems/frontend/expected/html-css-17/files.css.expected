body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:900px;margin:0 auto;background:#fff;padding:24px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.main-nav ul{list-style:none;padding:0;margin:0;display:flex;justify-content:center;gap:16px}
.main-nav a{display:inline-block;padding:10px 14px;color:#333;text-decoration:none;border-radius:8px;transition:.2s}
.main-nav a:hover{background:#eef3ff;text-decoration:underline}