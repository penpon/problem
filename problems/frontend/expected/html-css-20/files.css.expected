body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:900px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.media{display:flex;gap:20px;align-items:flex-start}
.media-thumb{width:220px;height:160px;object-fit:cover;border-radius:10px}
.media-body{flex:1}
.media-body h2{margin:0 0 10px}
.media-body p{color:#555;line-height:1.8;margin:0}