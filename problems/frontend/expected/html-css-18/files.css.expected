body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:1000px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.card-list{display:flex;gap:20px;flex-wrap:wrap;justify-content:center}
.card{width:300px;background:#fff;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08);overflow:hidden;transition:.25s;text-align:center}
.card img{display:block;width:100%;height:180px;object-fit:cover}
.card h3{margin:14px 0 6px}
.card p{color:#555;margin:0 16px 18px}
.card:hover{transform:translateY(-4px);box-shadow:0 10px 20px rgba(0,0,0,.12)}