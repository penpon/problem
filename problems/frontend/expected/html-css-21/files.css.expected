body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:1000px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.gallery{display:flex;flex-wrap:wrap;gap:16px;justify-content:center}
.thumb{display:block;width:300px}
.thumb img{display:block;width:100%;height:200px;object-fit:cover;border-radius:12px;transition:.25s}
.thumb:hover img{transform:scale(1.05);box-shadow:0 10px 22px rgba(0,0,0,.15)}