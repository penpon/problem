body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:900px;margin:0 auto;background:#fff;padding:40px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.hero{text-align:center;padding:40px 20px}
.hero h1{font-size:42px;margin:0 0 14px}
.hero p{max-width:600px;margin:0 auto 18px;color:#555;line-height:1.9}
.cta{display:inline-block;background:#111;color:#fff;text-decoration:none;padding:12px 22px;border-radius:10px;transition:.25s}
.cta:hover{background:#2d7ef7;transform:translateY(-2px)}