<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ビュー切替</title>
  <style>.view{padding:8px;border:1px solid #ddd;border-radius:6px;margin-top:8px}.d-none{display:none}</style>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <main style="padding:16px">
    <div class="buttons">
      <button id="btnA">A</button>
      <button id="btnB">B</button>
    </div>
    <div id="viewA" class="view">ビューA</div>
    <div id="viewB" class="view d-none">ビューB</div>
  </main>
  <script>
    function toggleView(targetId){
      const a = document.getElementById('viewA');
      const b = document.getElementById('viewB');
      if (targetId === 'viewA') { a.classList.remove('d-none'); b.classList.add('d-none'); }
      else { b.classList.remove('d-none'); a.classList.add('d-none'); }
    }
    const btnA = document.getElementById('btnA');
    const btnB = document.getElementById('btnB');
    btnA.addEventListener('click', () => toggleView('viewA'));
    btnB.addEventListener('click', () => toggleView('viewB'));
  </script>
</body>
</html>
