body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:1000px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.container h2{text-align:center;margin:0 0 20px}
.features{display:flex;gap:16px;justify-content:space-between}
.box{flex:1;border:1px solid #e3e7ef;border-radius:12px;padding:20px;text-align:center;transition:.2s;background:#fff}
.box h3{margin:6px 0 10px}
.box p{color:#555;margin:0}
.box:hover{background:#f8fbff;box-shadow:0 8px 18px rgba(0,0,0,.08)}