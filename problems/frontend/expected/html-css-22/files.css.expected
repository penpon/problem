body{font-family:Arial, sans-serif;margin:40px;background:#f5f5f5}
.container{max-width:1000px;margin:0 auto;background:#fff;padding:28px;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08)}
.pricing{display:flex;gap:16px;justify-content:center;align-items:stretch}
.card{flex:1;min-width:260px;background:#fff;border-radius:12px;box-shadow:0 2px 10px rgba(0,0,0,.08);padding:20px;text-align:center;transition:.25s}
.card h3{margin:8px 0}
.card .price{font-size:22px;font-weight:bold;margin:10px 0 14px}
.card ul{list-style:none;padding:0;margin:0;display:grid;gap:8px}
.card:hover{transform:translateY(-4px);box-shadow:0 10px 20px rgba(0,0,0,.12)}
.card--featured{transform:scale(1.03);background:#f7faff;outline:2px solid #2d7ef7}
.card--featured:hover{transform:scale(1.04) translateY(-2px)}